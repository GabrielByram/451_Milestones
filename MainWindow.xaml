<Window x:Class="Milestone1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milestone1"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <Label Content="State" FontSize="15" HorizontalAlignment="Left" Margin="86,31,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.366,-1.163"/>
        <ComboBox x:Name="statesList" Margin="174,31,80,313" SelectionChanged="statesList_SelectionChanged"/>
        <Label Content="City" FontSize="15" HorizontalAlignment="Left" Margin="90,94,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.366,-1.163"/>
        <ComboBox x:Name="CityList" Margin="174,76,80,260" SelectionChanged="CityList_SelectionChanged"/>
        <DataGrid x:Name="BusinessGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="38,141,38,21" SelectionChanged="BusinessGrid_SelectionChanged"/>

    </Grid>
</Window>
